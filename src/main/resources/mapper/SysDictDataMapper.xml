<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hospital.registration.mapper.SysDictDataMapper">

    <resultMap id="BaseResultMap" type="com.hospital.registration.entity.SysDictData">
        <id column="id" property="id"/>
        <result column="dict_type" property="dictType"/>
        <result column="dict_label" property="dictLabel"/>
        <result column="dict_value" property="dictValue"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="status" property="status"/>
        <result column="remark" property="remark"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 根据字典类型查询数据列表 -->
    <select id="selectByDictType" resultMap="BaseResultMap">
        SELECT * FROM sys_dict_data WHERE dict_type = #{dictType} AND status = 1 ORDER BY sort_order
    </select>

    <!-- 根据字典类型和字典值查询 -->
    <select id="selectByTypeAndValue" resultMap="BaseResultMap">
        SELECT * FROM sys_dict_data WHERE dict_type = #{dictType} AND dict_value = #{dictValue}
    </select>

    <!-- 删除指定字典类型的所有数据 -->
    <delete id="deleteByDictType">
        DELETE FROM sys_dict_data WHERE dict_type = #{dictType}
    </delete>

</mapper>