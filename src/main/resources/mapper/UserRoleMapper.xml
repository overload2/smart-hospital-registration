<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hospital.registration.mapper.UserRoleMapper">

    <!-- 角色结果映射 -->
    <resultMap id="RoleResultMap" type="com.hospital.registration.entity.Role">
        <id column="id" property="id"/>
        <result column="role_code" property="roleCode"/>
        <result column="role_name" property="roleName"/>
        <result column="description" property="description"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <!-- 根据用户ID查询角色列表 -->
    <select id="selectRolesByUserId" resultMap="RoleResultMap">
        SELECT r.id, r.role_code, r.role_name, r.description, r.status, r.create_time, r.update_time, r.deleted
        FROM role r
                 INNER JOIN user_role ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId} AND r.deleted = 0
    </select>

    <!-- 根据用户ID删除用户角色关联 -->
    <delete id="deleteByUserId">
        DELETE FROM user_role WHERE user_id = #{userId}
    </delete>
    <!-- 查询用户的角色编码列表 -->
    <select id="selectRoleCodesByUserId" resultType="java.lang.String">
        SELECT r.role_code
        FROM user_role ur
                 LEFT JOIN role r ON ur.role_id = r.id
        WHERE ur.user_id = #{userId} AND r.deleted = 0
    </select>
</mapper>