<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hospital.registration.mapper.SysConfigMapper">

    <resultMap id="BaseResultMap" type="com.hospital.registration.entity.SysConfig">
        <id column="id" property="id"/>
        <result column="config_key" property="configKey"/>
        <result column="config_value" property="configValue"/>
        <result column="config_name" property="configName"/>
        <result column="config_type" property="configType"/>
        <result column="remark" property="remark"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 根据配置键查询 -->
    <select id="selectByConfigKey" resultMap="BaseResultMap">
        SELECT * FROM sys_config WHERE config_key = #{configKey}
    </select>

    <!-- 查询所有配置 -->
    <select id="selectAllConfigs" resultMap="BaseResultMap">
        SELECT * FROM sys_config ORDER BY id
    </select>

</mapper>