<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hospital.registration.mapper.RoleMapper">

    <!-- 角色结果映射 -->
    <resultMap id="RoleResultMap" type="com.hospital.registration.entity.Role">
        <id column="id" property="id"/>
        <result column="role_code" property="roleCode"/>
        <result column="role_name" property="roleName"/>
        <result column="description" property="description"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <!-- 根据角色编码查询角色 -->
    <select id="selectByRoleCode" resultMap="RoleResultMap">
        SELECT id, role_code, role_name, description, status, create_time, update_time, deleted
        FROM role
        WHERE role_code = #{roleCode} AND deleted = 0
    </select>

    <!-- 查询所有角色列表 -->
    <select id="selectAllRoles" resultMap="RoleResultMap">
        SELECT id, role_code, role_name, description, status, create_time, update_time, deleted
        FROM role
        WHERE deleted = 0
        ORDER BY id ASC
    </select>


</mapper>