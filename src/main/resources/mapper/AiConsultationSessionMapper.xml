<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hospital.registration.mapper.AiConsultationSessionMapper">

    <resultMap id="BaseResultMap" type="com.hospital.registration.entity.AiConsultationSession">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="session_type" property="sessionType"/>
        <result column="title" property="title"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 查询用户的会话列表 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT * FROM ai_consultation_session
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
    </select>

    <!-- 查询用户进行中的会话 -->
    <select id="selectActiveByUserIdAndType" resultMap="BaseResultMap">
        SELECT * FROM ai_consultation_session
        WHERE user_id = #{userId} AND session_type = #{sessionType} AND status = 1
        ORDER BY create_time DESC
        LIMIT 1
    </select>

</mapper>