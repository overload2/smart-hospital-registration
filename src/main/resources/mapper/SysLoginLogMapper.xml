<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hospital.registration.mapper.SysLoginLogMapper">

    <resultMap id="BaseResultMap" type="com.hospital.registration.entity.SysLoginLog">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="username" property="username"/>
        <result column="ip" property="ip"/>
        <result column="location" property="location"/>
        <result column="browser" property="browser"/>
        <result column="os" property="os"/>
        <result column="status" property="status"/>
        <result column="msg" property="msg"/>
        <result column="login_time" property="loginTime"/>
    </resultMap>

    <resultMap id="VOResultMap" type="com.hospital.registration.vo.SysLoginLogVO">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="ip" property="ip"/>
        <result column="location" property="location"/>
        <result column="browser" property="browser"/>
        <result column="os" property="os"/>
        <result column="status" property="status"/>
        <result column="msg" property="msg"/>
        <result column="login_time" property="loginTime"/>
    </resultMap>

    <!-- 分页条件查询登录日志 -->
    <select id="selectPageByCondition" resultMap="VOResultMap">
        SELECT id, username, ip, location, browser, os, status, msg, login_time
        FROM sys_login_log
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="ip != null and ip != ''">
                AND ip LIKE CONCAT('%', #{ip}, '%')
            </if>
            <if test="startTime != null and startTime != ''">
                AND login_time &gt;= #{startTime}
            </if>
            <if test="endTime != null and endTime != ''">
                AND login_time &lt;= #{endTime}
            </if>
        </where>
        ORDER BY login_time DESC
    </select>

    <!-- 删除指定天数之前的日志 -->
    <delete id="deleteByDaysBefore">
        DELETE FROM sys_login_log WHERE login_time &lt; DATE_SUB(NOW(), INTERVAL #{days} DAY)
    </delete>

</mapper>