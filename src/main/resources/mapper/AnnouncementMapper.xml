<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hospital.registration.mapper.AnnouncementMapper">

    <resultMap id="BaseResultMap" type="com.hospital.registration.entity.Announcement">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <resultMap id="VOResultMap" type="com.hospital.registration.vo.AnnouncementVO">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 分页查询公告列表（管理端） -->
    <select id="selectPageList" resultMap="VOResultMap">
        SELECT id, title, content, status, create_time, update_time
        FROM announcement
        <where>
            deleted = 0
            <if test="title != null and title != ''">
                AND title LIKE CONCAT('%', #{title}, '%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <!-- 查询已发布的公告列表（患者端首页） -->
    <select id="selectPublishedList" resultMap="VOResultMap">
        SELECT id, title, content, create_time
        FROM announcement
        WHERE status = 1 AND deleted = 0
        ORDER BY create_time DESC
        LIMIT #{limit}
    </select>

</mapper>